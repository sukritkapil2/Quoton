<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@drawable/start_screen">

    <include layout="@layout/toolbar" android:id="@+id/toolbar"></include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:text="Login with your Google Account and start"
        android:id="@+id/head1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head1"
        android:text="Quoting!"
        android:id="@+id/head2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/google_login_btn"
        android:background="@drawable/google_custom_button"
        android:layout_below="@id/head2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:text="Google Sign In"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:id="@+id/skip_btn"
        android:background="@drawable/custom_button"
        android:layout_below="@id/google_login_btn"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:text="Skip for now"
        android:fontFamily="@font/montserrat_regular"></androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>